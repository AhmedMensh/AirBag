<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/off_white"
    android:fitsSystemWindows="true"
    android:id="@+id/drawer_layout"
    tools:openDrawer="start"
    tools:context=".ui.activities.bags_list.BagListActivity">




    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:background="@drawable/full_screen_background_blue"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingBottom="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="top"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/menu_icon"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_25sdp"

                    android:layout_gravity="start"
                    app:srcCompat="@drawable/ic_menu"/>
                <TextView
                    android:id="@+id/title"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="end"
                    android:paddingEnd="@dimen/_40sdp"
                    android:text="Reserve"
                    android:textSize="@dimen/_20sdp"
                    />

                <ImageView
                    android:id="@+id/filter_iv"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_20sdp"

                    android:tint="@color/white"
                    app:srcCompat="@drawable/ic_filter"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_25sdp"

                    app:srcCompat="@drawable/ic_visibility"/>
            </LinearLayout>





        </LinearLayout>

        <LinearLayout
            android:id="@+id/tabs_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_60sdp"
            android:orientation="horizontal"

            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/rounded_top_corner_white"
            android:gravity="center"
            >

            <LinearLayout
                android:id="@+id/tabs_icon_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/available_bags_tv"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_16sdp"
                    android:text="@string/available_bags"/>

                <View
                    android:layout_width="0dp"
                    android:layout_weight=".06"
                    android:background="@android:color/darker_gray"
                    android:layout_height="@dimen/_20sdp"/>


                <TextView
                    android:id="@+id/pending_items_tv"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_16sdp"
                    android:text="@string/pending_items"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/tabs_indicator_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/tabs_layout">

            <View
                android:id="@+id/tab_indicator1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/blue_dark"
                android:layout_height="@dimen/_4sdp"/>


            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/_4sdp"
                android:layout_weight=".2"/>
            <View
                android:id="@+id/tab_indicator2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:visibility="invisible"
                android:background="@color/blue_dark"
                android:layout_height="@dimen/_4sdp"/>
        </LinearLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/fragment_container"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@id/tabs_indicator_layout"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            >

        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"

        android:layoutDirection="locale"
        app:itemTextColor="@android:color/black"

        app:itemIconTint="@color/blue_dark"
        app:menu="@menu/nav_drawer">

    </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>